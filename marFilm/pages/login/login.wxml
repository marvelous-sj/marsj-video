<!--index.wxml-->
<view class="container"> 
 <view class="login-icon"> 
 <image class="login-img" src="../images/registerLog.jpg"></image> 
 </view> 
 <view class="login-from"> 
  <form bindsubmit='doLogin'>
 <!--账号-->
 <view class="inputView"> 
  <image class="nameImage" src="../images/name.svg"></image> 
  <label class="loginLab">账号</label> 
  <input class="inputText" placeholder="请输入账号" name="username" /> 
 </view> 
 <view class="line"></view> 
  
 <!--密码-->
 <view class="inputView"> 
  <image class="keyImage" src="../images/password.svg"></image> 
  <label class="loginLab">密码</label> 
  <input class="inputText" password="true" placeholder="请输入密码" name="password" /> 
 </view> 
  
 <!--按钮-->
 <view class="loginBtnView"> 
  <button class="loginBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" formType="submit">登录</button> 
  <button class="returnLoginBtn" type="warn" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="goToRegister">没有账号？点击注册</button> 
 </view> 
</form>
 
  
 
 </view> 
</view>
 